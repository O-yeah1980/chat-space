.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-items
      .chat-main__group-info__left-items__current-group
        =@group.name
      .chat-main__group-info__left-items__member-list
        Member:
        - @group.users.each do |user|
          =user.name
    .chat-main__group-info__right-item
      .chat-main__group-info__right-item__btn-border
        .chat-main__group-info__right-item__btn-border__edit-btn
          =link_to "Edit", edit_group_path(@group) 
  .chat-main__messages
    = render @messages
  .chat-main__message-form
    .chat-main__message-form__new-message
      = form_for [@group, @message], html: {class: 'chat-main__message-form__new-message__box'} do |f|
        .chat-main__message-form__new-message__box__left
          = f.text_field :content, class: 'text', placeholder: 'type a message'
          = f.label :image, class: 'image' do
            = icon('fas', 'image', class: 'image__icon')
            = f.file_field :image, class: 'image__file'
        .chat-main__message-form__new-message__box__right
          = f.submit 'Send', class: 'submit'

